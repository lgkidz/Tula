<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_dish"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/dish_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:id="@+id/dish_name"
            android:paddingLeft="8dp"
            android:paddingRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#66000000"
            android:gravity="center_vertical"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/dish_thumbnail" />

        <Button
            android:id="@+id/btn_fav"
            android:background="@drawable/ic_favorite_border_24dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dish_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dish_name" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>